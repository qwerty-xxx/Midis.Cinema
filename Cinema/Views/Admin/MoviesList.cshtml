@model Cinema.Models.Domain.Movie[]

@section SubNav
{
    @await Html.PartialAsync("SubNavigation", SubNavigationMenu.Movies)
}

<h2 class="admin-heading">Movies</h2>
<div class="admin-add-btn">
    @Html.ActionLink("Add movie", "AddMovie", "Admin", null, 
        new {@class="btn btn-success btn-block"})
</div>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th class="col">Id</th>
        <th>Poster</th>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>
                    <img style="max-height: 100px" src="@movie.ImgUrl" />
                </td>
                <td>@movie.Title</td>
                <td>@movie.Description</td>
                <td class="col-lg-2">
                    @Html.ActionLink("Edit", "EditMovie", "Admin", new { movieId = movie.Id }, new { @class = "btn btn-primary btn-block" })
                    @Html.ActionLink("Timeslots", "TimeslotsList", "Admin", new { movieId = movie.Id }, new { @class = "btn btn-primary btn-block" })
                    @Html.ActionLink("Remove", "RemoveMovie", "Admin", new { movieId = movie.Id }, new { @class = "btn btn-danger btn-block" })
                </td>
            </tr>
        }
    </tbody>
</table>
