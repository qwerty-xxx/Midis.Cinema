@model Cinema.Models.Domain.Timeslot

@section SubNav
{
    @await Html.PartialAsync("SubNavigation", SubNavigationMenu.Timeslots)
}

<h2>Edit Timeslot</h2>

@using (Html.BeginForm("EditTimeslot", "Admin"))
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.Format)
        @Html.EditorFor(x => x.Format, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Format)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.StartTime)
        <div class="input-group date" id='@Html.IdFor(x=>x.StartTime)'>
            <input type='text' class="form-control" name="@Html.NameFor(x=>x.StartTime)" value="@Html.ValueFor(x=>x.StartTime)" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
        @Html.ValidationMessageFor(x => x.StartTime)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Cost)
        @Html.EditorFor(x => x.Cost, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Cost)
    </div>

    @await Html.PartialAsync("MoviesSelector", Model.MovieId)
    @await Html.PartialAsync("HallsSelector", Model.HallId)


    <input type="submit" value="Save changes" class="btn btn-success" />



}

