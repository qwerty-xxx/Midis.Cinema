@model Cinema.Models.Domain.Hall

@section SubNav
{
    @await Html.PartialAsync("~/Views/Shared/SubNavigation.cshtml", SubNavigationMenu.Halls)
}

<h2>New Hall</h2>

@using (Html.BeginForm("AddHall", "Admin"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Places)
        @Html.EditorFor(x => x.Places, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ColumnsCount)
        @Html.EditorFor(x => x.ColumnsCount, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.RowsCount)
        @Html.EditorFor(x => x.RowsCount, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <input type="submit" value="Add hall" class="btn btn-success">
}